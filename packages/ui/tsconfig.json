{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Enables stricter inference for data properties on `this`
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ES2022",
    "paths": {
      "@/*": ["./src/app/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
